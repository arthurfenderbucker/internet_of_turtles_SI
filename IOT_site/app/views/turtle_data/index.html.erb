<p id="notice"><%= notice %></p>

<h1>Turtle Data</h1>

<table>
  <thead>
    <tr>
      <th>Turtle</th>
      <th>Temperature</th>
      <th>Light</th>
      <th>Depth</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turtle_data.each do |turtle_datum| %>
      <tr>
        <td><%= turtle_datum.turtle_id %></td>
        <td><%= turtle_datum.temperature %></td>
        <td><%= turtle_datum.light %></td>
        <td><%= turtle_datum.depth %></td>
        <td><%= turtle_datum.latitude %></td>
        <td><%= turtle_datum.longitude %></td>
        <td><%= link_to 'Show', turtle_datum %></td>
        <td><%= link_to 'Edit', edit_turtle_datum_path(turtle_datum) %></td>
        <td><%= link_to 'Destroy', turtle_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

