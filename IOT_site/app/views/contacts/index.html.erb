<p id="notice"><%= notice %></p>

<h1>Contacts</h1>


<table class="table">
    <thead class="thead-dark">
    <tr>
      <th scope="col">From</th>
      <th scope="col">Email</th>
      <th scope="col">Message</th>

      <th scope="col">Date</th>
      <th scope="col" colspan="1">Actions</th>
    </tr>
    </thead>

  <tbody>
    <% @contacts.reverse_each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.message.truncate(27) %></td>
        <td><%= contact.created_at %></td>
        
        <td><%= link_to 'Show', contact, class: "btn btn-info btn-sm "%>
        <%= link_to 'Edit', edit_contact_path(contact),class: "btn btn-primary btn-sm " %>
        <%= link_to 'Destroy', contact, class: "btn btn-danger btn-sm ", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>
