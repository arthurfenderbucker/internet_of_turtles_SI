<div class="form-mine">
<p id="alert"><%= alert %></p>
  <h1 class="display-4 text-center" ><b>Login</b></h1>
<%= form_tag sessions_path do |form| %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, "",class: "form-control" %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control" %>
  </div>
    <br/>
  <div class="actions">
    <%= submit_tag "Login", class: 'btn btn-success form-control' %>
  </div>
<% end %>
</div>