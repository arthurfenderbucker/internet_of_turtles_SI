<p id="notice"><%= notice %></p>

<h1>Turtles</h1>

<table>
  <thead>
    <tr>
      <th>Turtle</th>
      <th>Integer</th>
      <th>Name</th>
      <th>Sex</th>
      <th>Species</th>
      <th>Fixation date</th>
      <th>Birthday</th>
      <th>Researcher</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turtles.each do |turtle| %>
      <tr>
        <td><%= turtle.turtle_id %></td>
        <td><%= turtle.integer %></td>
        <td><%= turtle.name %></td>
        <td><%= turtle.sex %></td>
        <td><%= turtle.species %></td>
        <td><%= turtle.fixation_date %></td>
        <td><%= turtle.birthday %></td>
        <td><%= turtle.researcher_id %></td>
        <td><%= turtle.description %></td>
        <td><%= link_to 'Show', turtle %></td>
        <td><%= link_to 'Edit', edit_turtle_path(turtle) %></td>
        <td><%= link_to 'Destroy', turtle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

