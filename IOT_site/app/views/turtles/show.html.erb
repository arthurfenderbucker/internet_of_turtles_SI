<div class="form-mine">
  <h1 class="display-4 text-center"><b>Show Turtle</b></h1>
  <%= form_with model: @turtle do |form| %>
    <fieldset disabled>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :sex %>
        <%= form.select :sex, ['', 'Male', 'Female', 'Other'], {}, {class: "form-control"} %>
      </div>

      <div class="form-group">
        <%= form.label :species %>
        <%= form.select :species, ['Loggerhead', 'Green turtle', 'Leatherback', 'Hawksbill', 'Kemp\'s ridley', 'Olive ridley', 'Flatback'], {}, {class: "form-control"} %>
      </div>

      <div class="form-group">
        <%= form.label :fixation_date %>
        <br/>
        <%= form.datetime_select :fixation_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :birthday %>
        <br/>
        <%= form.datetime_select :birthday, class: "form-control" %>
      </div>
    </fieldset>

    <div class="form-group">
      <%= form.label :user_id %>
      <%= link_to @turtle.user.name, user_path(@turtle.user_id), class: 'btn btn-light form-control' %>
    </div>
    <fieldset disabled>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
      </div>
    </fieldset>
  <% end %>
  <br/>


  <% if @turtle.user_id == current_user.id || super_user %>
    <%= link_to 'Edit', edit_turtle_path(@turtle), class: 'btn btn-info form-control' %>
    <br/>
    <br/>
  <% end %>


  <%= link_to 'Back', turtles_path, class: 'btn btn-light form-control' %>
</div>
