<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Photo</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Telephone</th>
      <th>Researcher</th>
      <th>Career</th>
      <th>Institution</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.photo_id %></td>
        <td><%= user.gender %></td>
        <td><%= user.birthday %></td>
        <td><%= user.telephone %></td>
        <td><%= user.researcher %></td>
        <td><%= user.career %></td>
        <td><%= user.institution %></td>
        <td><%= user.description %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

